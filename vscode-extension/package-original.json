{
  "name": "google-cloud-build-extension",
  "displayName": "Google Cloud Build",
  "description": "Manage Google Cloud Build triggers directly from VSCode",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:googleCloudBuild.openPanel"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "googleCloudBuild.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "googleCloudBuild": [
        {
          "id": "googleCloudBuildView",
          "name": "Triggers",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "googleCloudBuild",
          "title": "Google Cloud Build",
          "icon": "$(cloud)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "googleCloudBuild.refresh",
          "when": "view == googleCloudBuildView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  }
}